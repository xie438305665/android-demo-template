<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/score_menu_close"
        android:layout_width="@dimen/dp.42"
        android:layout_height="?actionBarSize"
        android:layout_gravity="start|center"
        android:src="@drawable/ic_arrow_forward_light" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp.18"
        tools:text="@string/grade_grade_setting" />

</FrameLayout>