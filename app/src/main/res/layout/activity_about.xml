<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/dp.180"
        android:layout_height="@dimen/dp.180"
        android:layout_above="@+id/about_saas"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/about_saas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp.20"
        android:text="@string/app_name"
        android:textSize="@dimen/sp.30" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp.18"
        tools:text="V1.0" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_upgrade"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_version"
        android:layout_marginTop="@dimen/dp.20"
        android:text="@string/upgrade"
        android:textColor="@color/colorText" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_remove_disk_cache"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_upgrade"
        android:layout_marginTop="@dimen/dp.20"
        android:text="@string/remove_disk_cache"
        android:textColor="@color/colorText" />

</RelativeLayout>