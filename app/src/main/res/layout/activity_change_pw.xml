<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pw_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp.20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_pw_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_pw_verification"
                android:enabled="true"
                android:gravity="start"
                android:padding="@dimen/dp.10"
                android:text="@string/change_pw_verification"
                android:textColor="@color/colorWhite" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_pw_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_pw_new"
                android:enabled="false"
                android:gravity="end"
                android:padding="@dimen/dp.10"
                android:text="@string/change_pw_new"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_pw_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp.10"
            android:layout_marginTop="@dimen/dp.20"
            android:layout_marginEnd="@dimen/dp.10"
            android:inputType="textPassword"
            android:theme="@style/LoginEditText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_pw_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp.10"
            android:layout_marginTop="@dimen/dp.20"
            android:layout_marginEnd="@dimen/dp.10"
            android:inputType="textPassword"
            android:theme="@style/LoginEditText"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_pw_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp.10"
            android:layout_marginTop="@dimen/dp.20"
            android:layout_marginEnd="@dimen/dp.10"
            android:background="@drawable/shape_btn_green"
            android:text="@string/ok"
            android:textColor="@color/colorWhite" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>