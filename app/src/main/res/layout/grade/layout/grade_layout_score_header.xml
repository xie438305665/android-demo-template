<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

    <com.demo.template.widget.ScoreProgressLayout
        android:id="@+id/score_header_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.20"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_header_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/grade_ic_score_see_answer"
        android:drawablePadding="@dimen/dp.4"
        android:gravity="center"
        android:padding="@dimen/dp.8"
        android:text="@string/score_header_answer_text"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp.16"
        app:layout_constraintBottom_toTopOf="@+id/score_header_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_header_progress_layout" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_header_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp.8"
        android:textSize="@dimen/sp.16"
        app:layout_constraintBottom_toTopOf="@+id/score_header_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_header_progress_layout"
        tools:text="正确率：" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_header_all_true"
        android:layout_width="@dimen/dp.50"
        android:layout_height="@dimen/dp.28"
        android:layout_margin="@dimen/dp.6"
        android:background="@drawable/grade_selector_score_header_text_btn_true"
        android:gravity="center"
        android:text="@string/grade_fill_score_all_true"
        android:textColor="@color/grade_score_header_text"
        android:textSize="@dimen/sp.14"
        app:layout_constraintBottom_toTopOf="@+id/score_header_line"
        app:layout_constraintRight_toLeftOf="@+id/score_header_all_false"
        app:layout_constraintTop_toBottomOf="@+id/score_header_progress_layout" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_header_all_false"
        android:layout_width="@dimen/dp.50"
        android:layout_height="@dimen/dp.28"
        android:layout_margin="@dimen/dp.6"
        android:background="@drawable/grade_selector_score_header_text_btn_false"
        android:gravity="center"
        android:text="@string/grade_fill_score_all_false"
        android:textColor="@color/grade_score_header_text"
        android:textSize="@dimen/sp.14"
        app:layout_constraintBottom_toTopOf="@+id/score_header_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_header_progress_layout" />

    <View
        android:id="@+id/score_header_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.8"
        android:background="@color/grade_color_header_line"
        app:layout_constraintBottom_toTopOf="@+id/answer_header_max_topic_score"
        tools:background="@color/colorPrimary" />

    <View
        android:id="@+id/answer_header_line"
        android:layout_width="@dimen/dp.4"
        android:layout_height="@dimen/dp.20"
        android:layout_margin="@dimen/dp.4"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_header_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/answer_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp.2"
        android:text="@string/grade_answer_header_title"
        android:textSize="@dimen/sp.16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/answer_header_line"
        app:layout_constraintTop_toBottomOf="@+id/score_header_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/answer_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp.6"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp.16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answer_header_et_fraction"
        app:layout_constraintLeft_toRightOf="@+id/answer_header_title"
        app:layout_constraintRight_toLeftOf="@+id/answer_header_et_fraction"
        app:layout_constraintTop_toBottomOf="@+id/score_header_line"
        tools:text="王老吉6分 王老吉6分" />

    <com.demo.template.widget.ScoreFractionEditTextLayout
        android:id="@+id/answer_header_et_fraction"
        android:layout_width="@dimen/dp.50"
        android:layout_height="@dimen/dp.28"
        android:gravity="center"
        android:imeOptions="actionSend|flagNoExtractUi"
        android:inputType="numberDecimal"
        android:padding="@dimen/dp.2"
        android:textSize="@dimen/sp.16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/answer_header_max_topic_score"
        app:layout_constraintTop_toBottomOf="@+id/score_header_line"
        tools:background="@drawable/grade_selector_score_header_answer_fraction_et"
        tools:text="20"
        tools:textColor="@color/colorPrimary" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/answer_header_max_topic_score"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp.40"
        android:gravity="center"
        android:padding="@dimen/dp.2"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp.16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="  80分" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/answer_header_arbitration_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp.4"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/score_header_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_header_progress_layout"
        tools:text="王老吉6分 王老吉6分"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>