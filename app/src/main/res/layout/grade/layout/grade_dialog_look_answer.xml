<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp.4">

    <View
        android:layout_width="@dimen/dp.2"
        android:layout_height="@dimen/dp.16"
        android:layout_marginBottom="@dimen/dp.5"
        android:background="@color/colorOrange"
        app:layout_constraintBottom_toTopOf="@+id/grade_look_answer"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp.4"
        android:padding="@dimen/dp.4"
        android:text="@string/grade_look_title"
        app:layout_constraintBottom_toTopOf="@+id/grade_look_answer"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/grade_look_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toTopOf="@+id/grade_look_answer"
        app:layout_constraintRight_toRightOf="parent" />

    <com.zxhx.library.widget.custom.CustomWebView
        android:id="@+id/grade_look_answer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.200"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>
