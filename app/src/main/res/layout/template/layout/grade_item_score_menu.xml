<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:padding="@dimen/dp.15">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/dp.10"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp.16"
        tools:text="@string/grade_grade_setting" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/score_menu_forward"
        android:layout_width="@dimen/dp.28"
        android:layout_height="@dimen/dp.28"
        android:layout_gravity="end|center"
        android:src="@drawable/ic_arrow_forward_light_detail" />

    <com.rm.rmswitch.RMSwitch
        android:id="@+id/score_menu_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:visibility="gone"
        app:switchDesign="android"
        app:switchToggleCheckedColor="@color/colorRMSwitch"
        app:switchToggleNotCheckedColor="@color/colorGray" />

</FrameLayout>