<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fill_bottom_root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp.52"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fill_score_bottom_unknown"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp.6"
        android:layout_weight="1"
        android:src="@drawable/grade_ic_score_keyboard_issues" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fill_score_bottom_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp.6"
        android:layout_weight="1"
        android:src="@drawable/grade_ic_score_keyboard_right" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fill_score_bottom_wrong"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp.6"
        android:layout_weight="1"
        android:src="@drawable/grade_ic_score_keyboard_wrong" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fill_score_bottom_score"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp.6"
        android:layout_weight="1"
        android:src="@drawable/grade_ic_score_keyboard" />

</LinearLayout>