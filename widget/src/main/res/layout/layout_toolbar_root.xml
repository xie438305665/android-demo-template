<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_root_view"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/widget_color_white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/left_iv"
            android:layout_width="@dimen/widget.dp.42"
            android:layout_height="?actionBarSize"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/widget.dp.8"
            android:src="@drawable/ic_arrow_forward_light" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/widget_color_text"
            android:textSize="@dimen/widget.sp.18" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/widget.dp.10"
            android:text="@string/app_name"
            android:textColor="@color/widget_color_text"
            android:textSize="@dimen/widget.sp.18"
            android:visibility="gone"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/right_iv"
            android:layout_width="@dimen/widget.dp.36"
            android:layout_height="@dimen/widget.dp.36"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/widget.dp.10"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/tool_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget.dp.6"
        android:background="@drawable/shape_tool_bar_shadow" />

</LinearLayout>